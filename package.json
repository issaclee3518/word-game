{
  "name": "game",
  "version": "1.0.0",
  "main": "index.ts",
  "version": "1.0.1",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export --platform web --output-dir dist && npm run flatten-dist",
    "build:web": "expo export --platform web --output-dir dist && npm run flatten-dist",
    "preview:web": "expo export --platform web && npx serve dist",
    "flatten-dist": "node -e \"const fs=require('fs');const path=require('path');const jsFile=fs.readdirSync('dist/_expo/static/js/web/')[0];fs.copyFileSync('dist/_expo/static/js/web/'+jsFile,'dist/app.js');fs.rmSync('dist/_expo',{recursive:true,force:true});\""
  },
  "dependencies": {
    "expo": "~54.0.12",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
